{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "plugins": [
    "import",
    "node",
    "prettier",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": "error"
  }
}